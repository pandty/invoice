<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
	<th:block th:include="include :: header('发票详情')" />
	<th:block th:include="include :: select2-css" />
</head>
<body class="gray-bg">
	<div class="container-div">
		<div class="row">
			<div class="col-sm-12 search-collapse">
				<form id="data-form">
					<input type="hidden" name = "fpqqlsh" th:value="${fpqqlsh}">
					<div class="select-list">
						<ul>
							<li>
								商品名称：<input type="text" name="spmc"/>
							</li>
							<li>
								商品编码：<input type="text" name="spbm"/>
							</li>
							<li>
								<a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
								<a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
							</li>
						</ul>
					</div>
				</form>
			</div>
	        
	        <div class="col-sm-12 select-table table-striped">
			    <table id="bootstrap-table"></table>
			</div>
		</div>
	</div>
	<th:block th:include="include :: footer" />
	<th:block th:include="include :: select2-js" />
	<script th:inline="javascript">
		var prefix = ctx + "shuzu/invoice/detail";

		$(function() {
			var options = {
				url: prefix + "/list",
				modalName: "数据",
				columns: [{
						checkbox: true
					},
                    {field: 'fpqqlsh',title: '发票请求流水号',formatter: function(value, row, index) {return $.table.tooltip(value,16);} },
                    {field: 'fphxz',title: '发票行性质',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'spmc',title: '商品名称',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'ggxh',title: '规格型号',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'dw',title: '单位',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'spsl',title: '商品数量',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'dj',title: '单价',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'je',title: '金额',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'sl',title: '税率',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'se',title: '税额',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'spbm',title: '商品编码',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'zxbm',title: '纳税人自行编码',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'yhzcbs',title: '优惠政策标示',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'lslbs',title: '税率标示',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'zzstsgl',title: '增值税特殊管理',formatter: function(value, row, index) {return $.table.tooltip(value,6);} },
                    {field: 'insertTime',title: '插入时间',formatter: function(value, row, index) {return $.table.tooltip(value,6);} }]
				};
			$.table.init(options);
            $.table.hideColumn('ggxh');
            $.table.hideColumn('yhzcbs');
            $.table.hideColumn('insertTime');
            $.table.hideColumn('zzstsgl');

		});
	</script>
</body>
</html>